from turtle import done
import cv2 as cv
import numpy as np
import os

while(True):
    screenshot = None
    cv.imshow('Computer Vision', screenshot)

    #press 'q' with the output window to force exit
    #waits 1ms every loop to process key presses
    if cv.waitKey(1) == ord('q'):
        cv.destroyAllWindows()
        break
print('Done.')